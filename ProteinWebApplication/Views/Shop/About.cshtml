    <!-- Contact CTA -->
    <section class="py-16 bg-gradient-to-r from-blue-600 to-purple-600 text-white">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-4xl font-bold mb-4">Ready to Start Your Fitness Journey?</h2>
            <p class="text-xl text-blue-100 mb-8">Browse our products and find the perfect supplement for your goals</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/Shop/Products" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition">
                    <i class="fas fa-shopping-bag mr-2"></i>Shop Now
