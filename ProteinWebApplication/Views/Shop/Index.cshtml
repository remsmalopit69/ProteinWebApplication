﻿@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div ng-init="loadProducts(); loadCategories(); loadBanners(); loadHeroImage();">

    <!-- Hero Section with Dynamic Image -->
    <section>
        <div class="mx-auto max-w-screen-xl px-4 py-8 sm:py-12 sm:px-6 lg:py-16 lg:px-8">
            <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-16">
                <div class="flex flex-col justify-center lg:py-12">
                    <h1 class="text-4xl font-black text-gray-900 sm:text-5xl md:text-6xl">
                        Nutrition That Fits <br />
                        <span class="text-black-600">Your Lifestyle</span>
                    </h1>

                    <p class="mt-4 text-gray-600">
                        Your trusted Philippines-based reseller of authentic, high-quality protein supplements.
                    </p>

                    <div class="mt-8 flex flex-wrap gap-4 text-center">
                        <a href="/Shop/Products" class="block w-full rounded bg-black px-12 py-3 text-sm font-medium text-white shadow hover:bg-gray-800 sm:w-auto">
                            Shop Now
                        </a>
                        <a href="/Shop/About" class="block w-full rounded border border-gray-300 px-12 py-3 text-sm font-medium text-black shadow hover:bg-gray-50 sm:w-auto">
                            View Catalog
                        </a>
                    </div>

                    <div class="mt-8 flex items-center gap-x-8 text-sm font-medium text-gray-500">
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded-full bg-green-500"></div>
                            <span>Authentic Products</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded-full bg-blue-500"></div>
                            <span>Fast Delivery</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded-full bg-orange-500"></div>
                            <span>Best Prices</span>
                        </div>
                    </div>
                </div>

                <!-- DYNAMIC HERO IMAGE -->
                <div class="relative h-64 overflow-hidden rounded-lg sm:h-80 lg:h-full">
                    <img ng-if="heroImage"
                         ng-src="{{heroImage.imagePath}}"
                         alt="{{heroImage.imageName}}"
                         class="absolute inset-0 h-full w-full object-cover" />

                    <div class="absolute bottom-4 left-4 rounded-lg bg-white/90 p-4 shadow-lg backdrop-blur-sm">
                        <p class="text-3xl font-bold text-gray-900">500+</p>
                        <p class="text-sm text-gray-600">Happy Customers</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-white py-16 md:py-24">
        <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">

            <div class="text-center mb-16">
                <span class="text-xs font-bold tracking-widest text-gray-500 uppercase mb-2 block">Bestseller</span>
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Featured Products</h2>
                <p class="text-gray-500 max-w-2xl mx-auto leading-relaxed">
                    Discover our handpicked selection of premium protein powders from trusted international brands, all available at competitive prices.
                </p>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                <div ng-repeat="product in products | limitTo:8" class="group relative bg-white border border-gray-100 rounded-2xl overflow-hidden hover:border-gray-300 transition duration-300">

                    <div class="relative aspect-[4/5] bg-gray-50 overflow-hidden">
                        <span ng-if="product.stockQuantity === 0" class="absolute top-3 left-3 bg-gray-900 text-white text-[10px] font-bold px-3 py-1 uppercase tracking-wider rounded-full z-10">
                            Out of Stock
                        </span>
                        <span class="absolute top-3 right-3 bg-red-600 text-white text-[10px] font-bold px-3 py-1 uppercase tracking-wider rounded-full z-10" ng-if="product.price < 3000">
                            SALE
                        </span>

                        <img ng-src="{{product.image || 'https://via.placeholder.com/300x300?text=No+Image'}}"
                             alt="{{product.productName}}"
                             class="w-full h-full object-contain p-6 group-hover:scale-105 transition duration-500 ease-in-out mix-blend-multiply">

                        <div class="absolute inset-x-4 bottom-4 translate-y-full opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition duration-300 ease-out">
                            <button ng-click="viewProduct(product.productID)" class="w-full bg-black text-white font-medium py-3 rounded-xl shadow-lg hover:bg-gray-800 flex items-center justify-center space-x-2">
                                <span>View Details</span>
                                <i class="fas fa-arrow-right text-xs"></i>
                            </button>
                        </div>
                    </div>

                    <div class="p-5">
                        <div class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">
                            {{product.categoryName}}
                        </div>

                        <h3 class="text-base font-bold text-gray-900 mb-2 leading-tight group-hover:text-gray-600 transition">
                            {{product.productName}}
                        </h3>

                        <div class="flex items-end justify-between mt-4 border-t border-gray-50 pt-4">
                            <div>
                                <p class="text-lg font-bold text-gray-900">₱{{product.price | number:2}}</p>
                            </div>
                            <div class="flex items-center space-x-1 mb-1">
                                <i class="fas fa-star text-yellow-400 text-xs"></i>
                                <span class="text-xs text-gray-500 font-medium">4.8</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-16">
                <a href="/Shop/Products" class="inline-flex items-center justify-center px-8 py-3 border border-gray-300 text-base font-medium rounded-full text-gray-700 bg-white hover:bg-black hover:text-white hover:border-black transition duration-300">
                    View All Products
                    <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </section>

    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">

            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 tracking-tight">Shop by Category</h2>
                <p class="text-gray-500 max-w-2xl mx-auto">
                    Find the perfect protein supplement tailored to your specific fitness goals.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div ng-repeat="category in categories"
                     class="group relative h-[400px] rounded-2xl overflow-hidden cursor-pointer shadow-sm hover:shadow-xl transition duration-500"
                     ng-click="filterByCategory(category.categoryID)">

                    <img ng-src="{{category.image || 'https://images.unsplash.com/photo-1517836357463-d25dfeac3438?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80&sat=-100'}}"
                         alt="{{category.categoryName}}"
                         class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">

                    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>

                    <div class="absolute inset-0 p-8 flex flex-col justify-end">
                        <span class="inline-block px-3 py-1 bg-white/20 backdrop-blur-sm border border-white/30 rounded-full text-[10px] font-bold text-white uppercase tracking-wider w-fit mb-3">
                            {{category.productCount || 0}} Products
                        </span>

                        <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-gray-200 transition">
                            {{category.categoryName}}
                        </h3>

                        <p class="text-gray-300 text-sm leading-relaxed line-clamp-2 mb-4 opacity-0 transform translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition duration-500 delay-100">
                            {{category.categoryDescription || 'Premium selection for your fitness journey.'}}
                        </p>

                        <div class="flex items-center text-white text-sm font-semibold mt-2">
                            <span class="border-b-2 border-white pb-0.5">Shop Now</span>
                            <i class="fas fa-arrow-right ml-3 transform group-hover:translate-x-2 transition"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <section class="py-20 bg-gray-50 border-t border-gray-100">
        <div class="container mx-auto px-4">

            <div class="text-center mb-16 max-w-3xl mx-auto">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Why Choose ProteinPH?</h2>
                <p class="text-gray-500 leading-relaxed">
                    As a trusted Philippines-based reseller, we're committed to bringing you the highest quality protein supplements at competitive prices, with the convenience and reliability you deserve.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">

                <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md hover:-translate-y-1 transition duration-300">
                    <div class="w-14 h-14 bg-gray-900 rounded-xl flex items-center justify-center text-white mb-6">
                        <i class="fas fa-shield-alt text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-bold text-gray-900 mb-3">Authentic Products</h3>
                    <p class="text-sm text-gray-500 leading-relaxed">
                        We guarantee 100% authentic supplements directly sourced from authorized distributors.
                    </p>
                </div>

                <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md hover:-translate-y-1 transition duration-300">
                    <div class="w-14 h-14 bg-gray-900 rounded-xl flex items-center justify-center text-white mb-6">
                        <i class="fas fa-shipping-fast text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-bold text-gray-900 mb-3">Fast PH Delivery</h3>
                    <p class="text-sm text-gray-500 leading-relaxed">
                        Quick and reliable delivery across Metro Manila, Luzon, Visayas, and Mindanao.
                    </p>
                </div>

                <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md hover:-translate-y-1 transition duration-300">
                    <div class="w-14 h-14 bg-gray-900 rounded-xl flex items-center justify-center text-white mb-6">
                        <i class="fas fa-star text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-bold text-gray-900 mb-3">Trusted Reseller</h3>
                    <p class="text-sm text-gray-500 leading-relaxed">
                        Years of experience serving Filipino fitness enthusiasts with premium supplements.
                    </p>
                </div>

                <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md hover:-translate-y-1 transition duration-300">
                    <div class="w-14 h-14 bg-gray-900 rounded-xl flex items-center justify-center text-white mb-6">
                        <i class="fas fa-clock text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-bold text-gray-900 mb-3">Fresh Stock</h3>
                    <p class="text-sm text-gray-500 leading-relaxed">
                        Regular inventory updates ensure you get the freshest products with optimal expiry dates.
                    </p>
                </div>

            </div>
        </div>
    </section>

</div>