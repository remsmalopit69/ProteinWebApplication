@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div ng-init="loadProducts(); loadCategories(); loadBanners();">

    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <div>
                    <h1 class="text-5xl font-bold mb-4">
                        Fuel Your<br>Fitness Journey
                    </h1>
                    <p class="text-xl mb-8 text-blue-100">
                        Premium protein supplements to help you reach your goals faster.
                    </p>
                    <div class="flex space-x-4">
                        <a href="/Shop/Products" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition">
                            Shop Now
                        </a>
                        <a href="/Shop/About" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition">
                            Learn More
                        </a>
                    </div>
                </div>
                <div class="hidden md:block">
                    <img src="https://images.unsplash.com/photo-1593095948071-474c5cc2989d?w=600" alt="Protein" class="rounded-lg shadow-2xl">
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Categories -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-bold text-gray-800 mb-4">Shop by Category</h2>
                <p class="text-gray-600">Find the perfect supplement for your needs</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div ng-repeat="category in categories" class="bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-blue-600 hover:shadow-lg transition cursor-pointer" ng-click="filterByCategory(category.categoryID)">
                    <div class="text-center">
                        <div class="w-20 h-20 mx-auto mb-4 bg-blue-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-box text-blue-600 text-3xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-800 mb-2">{{category.categoryName}}</h3>
                        <p class="text-gray-600 text-sm mb-3">{{category.productCount}} Products</p>
                        <a href="/Shop/Products" class="text-blue-600 font-medium hover:text-blue-700">
                            Browse <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-bold text-gray-800 mb-4">Featured Products</h2>
                <p class="text-gray-600">Our best-selling supplements</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div ng-repeat="product in products | limitTo:8" class="bg-white rounded-lg shadow-md hover:shadow-xl transition overflow-hidden">
                    <div class="relative">
                        <img ng-src="{{product.image || 'https://via.placeholder.com/300x300?text=No+Image'}}"
                             alt="{{product.productName}}"
                             class="w-full h-64 object-cover">
                        <span ng-if="product.stockQuantity > 0" class="absolute top-4 right-4 bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                            In Stock
                        </span>
                        <span ng-if="product.stockQuantity === 0" class="absolute top-4 right-4 bg-red-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                            Out of Stock
                        </span>
                    </div>
                    <div class="p-4">
                        <span class="text-blue-600 text-sm font-semibold">{{product.categoryName}}</span>
                        <h3 class="text-lg font-semibold text-gray-800 mb-2 mt-1">{{product.productName}}</h3>
                        <p class="text-gray-600 text-sm mb-4 line-clamp-2">{{product.productDescription}}</p>
                        <div class="flex justify-between items-center">
                            <span class="text-2xl font-bold text-blue-600">₱{{product.price | number:2}}</span>
                            <button ng-click="viewProduct(product.productID)" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                                View
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-12">
                <a href="/Shop/Products" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
                    View All Products <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-bold text-gray-800 mb-4">Why Choose Us</h2>
                <p class="text-gray-600">Quality supplements you can trust</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="text-center">
                    <div class="w-20 h-20 mx-auto mb-4 bg-blue-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-shield-alt text-blue-600 text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Certified Quality</h3>
                    <p class="text-gray-600">All products are lab-tested and certified for purity and quality.</p>
                </div>

                <div class="text-center">
                    <div class="w-20 h-20 mx-auto mb-4 bg-green-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-truck text-green-600 text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Fast Delivery</h3>
                    <p class="text-gray-600">Get your supplements delivered within 2-3 business days.</p>
                </div>

                <div class="text-center">
                    <div class="w-20 h-20 mx-auto mb-4 bg-purple-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-headset text-purple-600 text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">24/7 Support</h3>
                    <p class="text-gray-600">Our team is always here to help you with any questions.</p>
                </div>
            </div>
        </div>
    </section>

</div>