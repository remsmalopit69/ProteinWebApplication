@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div ng-init="loadProducts(); loadCategories();">

    <!-- Page Header -->
    <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-16">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">Our Products</h1>
            <p class="text-xl text-blue-100">Discover premium protein supplements for every fitness goal</p>
        </div>
    </section>

    <!-- Filters & Products Grid -->
    <section class="py-12 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row gap-8">

                <!-- Sidebar Filters -->
                <aside class="w-full md:w-64 flex-shrink-0">
                    <div class="bg-white rounded-lg shadow-md p-6 sticky top-24">
                        <h3 class="text-lg font-bold text-gray-800 mb-4">Filter by Category</h3>

                        <!-- All Products Button -->
                        <button ng-click="filterByCategory(null)"
                                ng-class="{'bg-blue-600 text-white': selectedCategory === null, 'bg-gray-100 text-gray-700 hover:bg-gray-200': selectedCategory !== null}"
                                class="w-full text-left px-4 py-3 rounded-lg mb-2 transition font-medium">
                            <i class="fas fa-th-large mr-2"></i>All Products
                        </button>

                        <!-- Category Buttons -->
                        <button ng-repeat="category in categories"
                                ng-click="filterByCategory(category.categoryID)"
                                ng-class="{'bg-blue-600 text-white': selectedCategory === category.categoryID, 'bg-gray-100 text-gray-700 hover:bg-gray-200': selectedCategory !== category.categoryID}"
                                class="w-full text-left px-4 py-3 rounded-lg mb-2 transition">
                            <i class="fas fa-tag mr-2"></i>{{category.categoryName}}
                            <span class="float-right text-sm opacity-75">({{category.productCount}})</span>
                        </button>
                    </div>
                </aside>

                <!-- Products Grid -->
                <div class="flex-1">
                    <!-- Products Count -->
                    <div class="mb-6">
                        <h2 class="text-2xl font-bold text-gray-800">
                            <span ng-if="selectedCategory === null">All Products</span>
                            <span ng-if="selectedCategory !== null">{{(categories | filter:{categoryID:selectedCategory})[0].categoryName}}</span>
                        </h2>
                        <p class="text-gray-600">Showing {{products.length}} products</p>
                    </div>

                    <!-- Products Grid -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                        <div ng-repeat="product in products" class="bg-white rounded-lg shadow-md hover:shadow-xl transition overflow-hidden group">
                            <!-- Product Image -->
                            <div class="relative overflow-hidden">
                                <img ng-src="{{product.image || 'https://via.placeholder.com/300x300?text=No+Image'}}"
                                     alt="{{product.productName}}"
                                     class="w-full h-64 object-cover group-hover:scale-110 transition duration-300">

                                <!-- Stock Badge -->
                                <span ng-if="product.stockQuantity > 0"
                                      class="absolute top-4 right-4 bg-green-500 text-white px-3 py-1 rounded-full text-xs font-semibold shadow-lg">
                                    In Stock
                                </span>
                                <span ng-if="product.stockQuantity === 0"
                                      class="absolute top-4 right-4 bg-red-500 text-white px-3 py-1 rounded-full text-xs font-semibold shadow-lg">
                                    Out of Stock
                                </span>

                                <!-- Quick View Overlay -->
                                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition duration-300 flex items-center justify-center">
                                    <button ng-click="viewProduct(product.productID)"
                                            class="bg-white text-blue-600 px-6 py-2 rounded-lg font-semibold opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition duration-300">
                                        View Details
                                    </button>
                                </div>
                            </div>

                            <!-- Product Info -->
                            <div class="p-4">
                                <span class="text-blue-600 text-xs font-semibold uppercase tracking-wide">{{product.categoryName}}</span>
                                <h3 class="text-lg font-bold text-gray-800 mb-2 mt-1 line-clamp-1">{{product.productName}}</h3>
                                <p class="text-gray-600 text-sm mb-4 line-clamp-2">{{product.productDescription}}</p>

                                <!-- Price & Add to Cart -->
                                <div class="flex justify-between items-center">
                                    <div>
                                        <span class="text-2xl font-bold text-blue-600">₱{{product.price | number:2}}</span>
                                    </div>
                                    <button ng-click="viewProduct(product.productID)"
                                            ng-disabled="product.stockQuantity === 0"
                                            class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition disabled:bg-gray-400 disabled:cursor-not-allowed text-sm font-semibold">
                                        <i class="fas fa-eye mr-1"></i>View
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- No Products Message -->
                    <div ng-if="products.length === 0" class="text-center py-16">
                        <i class="fas fa-box-open text-gray-300 text-6xl mb-4"></i>
                        <h3 class="text-2xl font-bold text-gray-600 mb-2">No Products Found</h3>
                        <p class="text-gray-500">Try selecting a different category</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

<style>
    .line-clamp-1 {
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>