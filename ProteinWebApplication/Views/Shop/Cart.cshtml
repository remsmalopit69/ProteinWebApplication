@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div ng-init="loadCart()">

    <!-- Page Header -->
    <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-12">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl font-bold mb-2">Shopping Cart</h1>
            <p class="text-blue-100">Review your items</p>
        </div>
    </section>

    <!-- Cart Section -->
    <section class="py-12 bg-gray-50 min-h-screen">
        <div class="container mx-auto px-4">

            <!-- Cart Items -->
            <div ng-if="cart.length > 0" class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2">
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h2 class="text-2xl font-bold text-gray-800 mb-6">Cart Items ({{cart.length}})</h2>

                        <div class="space-y-4">
                            <div ng-repeat="item in cart" class="flex gap-4 pb-6 border-b">
                                <!-- Product Image -->
                                <img ng-src="{{item.image || 'https://via.placeholder.com/120'}}"
                                     alt="{{item.productName}}"
                                     class="w-24 h-24 object-cover rounded-lg">

                                <!-- Product Info -->
                                <div class="flex-1">
                                    <h3 class="font-bold text-gray-800 mb-1">{{item.productName}}</h3>
                                    <p class="text-xl font-bold text-blue-600 mb-3">₱{{item.price | number:2}}</p>

                                    <!-- Quantity Controls -->
                                    <div class="flex items-center gap-4">
                                        <div class="flex items-center border rounded-lg">
                                            <button ng-click="updateCartQuantity(item, item.quantity - 1)"
                                                    class="px-3 py-2 hover:bg-gray-100">
                                                <i class="fas fa-minus text-sm"></i>
                                            </button>
                                            <input type="number"
                                                   ng-model="item.quantity"
                                                   ng-change="saveCart()"
                                                   min="1"
                                                   class="w-16 text-center border-none py-2 focus:outline-none">
                                            <button ng-click="updateCartQuantity(item, item.quantity + 1)"
                                                    class="px-3 py-2 hover:bg-gray-100">
                                                <i class="fas fa-plus text-sm"></i>
                                            </button>
                                        </div>

                                        <button ng-click="removeFromCart($index)"
                                                class="text-red-600 hover:text-red-700 font-medium text-sm">
                                            <i class="fas fa-trash mr-1"></i>Remove
                                        </button>
                                    </div>
                                </div>

                                <!-- Item Total -->
                                <div class="text-right">
                                    <p class="text-gray-600 text-sm mb-1">Subtotal</p>
                                    <p class="text-xl font-bold text-gray-800">₱{{item.price * item.quantity | number:2}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-lg shadow-md p-6 sticky top-24">
                        <h2 class="text-2xl font-bold text-gray-800 mb-6">Order Summary</h2>

                        <div class="space-y-3 mb-6">
                            <div class="flex justify-between text-gray-600">
                                <span>Subtotal</span>
                                <span>₱{{cartTotal | number:2}}</span>
                            </div>
                            <div class="flex justify-between text-gray-600">
                                <span>Shipping</span>
                                <span class="text-green-600 font-semibold">FREE</span>
                            </div>
                            <div class="flex justify-between text-xl font-bold text-gray-800 pt-3 border-t">
                                <span>Total</span>
                                <span class="text-blue-600">₱{{cartTotal | number:2}}</span>
                            </div>
                        </div>

                        <a href="/Checkout/Index" class="block w-full bg-blue-600 text-white text-center py-4 rounded-lg font-bold text-lg hover:bg-blue-700 transition mb-3">
                            <i class="fas fa-lock mr-2"></i>Proceed to Checkout
                        </a>

                        <a href="/Shop/Products" class="block w-full border-2 border-gray-300 text-gray-700 text-center py-3 rounded-lg font-semibold hover:bg-gray-50 transition">
                            Continue Shopping
                        </a>

                        <!-- Free Shipping Notice -->
                        <div class="mt-6 bg-green-50 p-4 rounded-lg border border-green-200">
                            <div class="flex items-start">
                                <i class="fas fa-shipping-fast text-green-600 mt-1 mr-3"></i>
                                <div>
                                    <p class="text-sm text-gray-700 font-semibold mb-1">Free Shipping</p>
                                    <p class="text-xs text-gray-600">On all orders nationwide</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Empty Cart -->
            <div ng-if="cart.length === 0" class="text-center py-16">
                <div class="bg-white rounded-lg shadow-md p-12 max-w-md mx-auto">
                    <i class="fas fa-shopping-cart text-gray-300 text-6xl mb-6"></i>
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">Your cart is empty</h2>
                    <p class="text-gray-600 mb-8">Add some products to get started!</p>
                    <a href="/Shop/Products" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
                        <i class="fas fa-shopping-bag mr-2"></i>Browse Products
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>