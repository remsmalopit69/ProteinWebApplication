@{
    ViewBag.Title = "Categories Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div ng-init="loadCategories(); loadCategoryImages();">

    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Categories</h2>
        <button ng-click="openCategoryModal(null)"
                data-bs-toggle="modal"
                data-bs-target="#categoryModal"
                class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">
            <i class="fas fa-plus mr-2"></i>Add Category
        </button>
    </div>

    <!-- Categories Grid with Images -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div ng-repeat="category in categories" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition">
            <div class="relative h-48 bg-gradient-to-br from-blue-500 to-purple-600">
                <img ng-if="category.image"
                     ng-src="{{category.image}}"
                     alt="{{category.categoryName}}"
                     class="w-full h-full object-cover">
                <div ng-if="!category.image" class="w-full h-full flex items-center justify-center text-white">
                    <i class="fas fa-folder text-6xl opacity-30"></i>
                </div>
                <div class="absolute top-2 right-2 bg-white rounded-full px-3 py-1 text-xs font-bold text-blue-600">
                    {{category.productCount || 0}} Products
                </div>
            </div>
            <div class="p-4">
                <h3 class="font-bold text-gray-900 mb-2">{{category.categoryName}}</h3>
                <p class="text-sm text-gray-500 mb-4 line-clamp-2">{{category.categoryDescription}}</p>
                <div class="flex gap-2">
                    <button ng-click="openCategoryModal(category)"
                            data-bs-toggle="modal"
                            data-bs-target="#categoryModal"
                            class="flex-1 bg-blue-500 text-white text-sm px-3 py-2 rounded hover:bg-blue-600 transition">
                        <i class="fas fa-edit mr-1"></i>Edit
                    </button>
                    <button ng-click="deleteCategory(category.categoryID)"
                            class="bg-red-500 text-white text-sm px-3 py-2 rounded hover:bg-red-600 transition">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Modal -->
    <div class="modal fade" id="categoryModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{editMode ? 'Edit' : 'Add'}} Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <!-- Category Form -->
                        <div class="col-md-6">
                            <form ng-submit="saveCategory()">
                                <div class="mb-4">
                                    <label class="block text-gray-700 font-medium mb-2">Category Name *</label>
                                    <input type="text"
                                           ng-model="categoryForm.categoryName"
                                           class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                                           required>
                                </div>
                                <div class="mb-4">
                                    <label class="block text-gray-700 font-medium mb-2">Description</label>
                                    <textarea ng-model="categoryForm.categoryDescription"
                                              class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                                              rows="3"></textarea>
                                </div>
                                <div class="mb-4">
                                    <label class="block text-gray-700 font-medium mb-2">Display Order</label>
                                    <input type="number"
                                           ng-model="categoryForm.displayOrder"
                                           class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
                                </div>
                                <div class="flex justify-end space-x-2">
                                    <button type="button"
                                            class="bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400"
                                            data-bs-dismiss="modal">
                                        Cancel
                                    </button>
                                    <button type="submit"
                                            class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
                                            data-bs-dismiss="modal">
                                        <i class="fas fa-save mr-2"></i>Save Category
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Image Selection Panel -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="block text-gray-700 font-medium mb-2">Category Image</label>

                                <!-- Current Image Preview -->
                                <div ng-if="categoryForm.selectedImage" class="mb-4 p-4 bg-gray-50 rounded-lg border-2 border-blue-500">
                                    <div class="flex items-center justify-between mb-2">
                                        <span class="text-sm font-semibold text-gray-700">Selected Image:</span>
                                        <button ng-click="categoryForm.selectedImage = null; categoryForm.selectedImageID = null"
                                                class="text-red-500 hover:text-red-700 text-sm">
                                            <i class="fas fa-times"></i> Remove
                                        </button>
                                    </div>
                                    <img ng-src="{{categoryForm.selectedImage}}"
                                         alt="Selected"
                                         class="w-full h-40 object-cover rounded">
                                </div>

                                <!-- Upload New Image -->
                                <div class="mb-4">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <i class="fas fa-upload mr-1"></i>Upload New Image
                                    </label>
                                    <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-blue-500 transition cursor-pointer"
                                         onclick="document.getElementById('categoryImageUpload').click()">
                                        <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-2"></i>
                                        <p class="text-sm text-gray-600">Click to upload or drag and drop</p>
                                        <p class="text-xs text-gray-400">PNG, JPG up to 5MB</p>
                                    </div>
                                    <input type="file"
                                           id="categoryImageUpload"
                                           accept="image/*"
                                           style="display:none"
                                           onchange="angular.element(this).scope().uploadCategoryImage(this.files[0])">
                                </div>

                                <!-- OR Divider -->
                                <div class="relative my-4">
                                    <div class="absolute inset-0 flex items-center">
                                        <div class="w-full border-t border-gray-300"></div>
                                    </div>
                                    <div class="relative flex justify-center text-sm">
                                        <span class="px-2 bg-white text-gray-500">OR</span>
                                    </div>
                                </div>

                                <!-- Choose from Gallery -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <i class="fas fa-images mr-1"></i>Choose from Gallery
                                    </label>
                                    <div class="grid grid-cols-3 gap-2 max-h-96 overflow-y-auto border rounded-lg p-2">
                                        <div ng-repeat="img in availableCategoryImages | filter:{referenceID: '!!'} | filter:{referenceID: null}"
                                             ng-click="selectImageForCategory(img)"
                                             class="cursor-pointer border-2 rounded-lg hover:border-blue-500 transition p-1"
                                             ng-class="{'border-blue-500 bg-blue-50': categoryForm.selectedImageID === img.imageID, 'border-gray-200': categoryForm.selectedImageID !== img.imageID}">
                                            <img ng-src="{{img.imagePath}}"
                                                 alt="{{img.imageName}}"
                                                 class="w-full h-20 object-cover rounded">
                                            <p class="text-xs text-gray-600 mt-1 truncate text-center">{{img.imageName}}</p>
                                        </div>
                                        <div ng-if="(availableCategoryImages | filter:{referenceID: '!!'} | filter:{referenceID: null}).length === 0"
                                             class="col-span-3 text-center py-8 text-gray-400">
                                            <i class="fas fa-image text-3xl mb-2"></i>
                                            <p class="text-sm">No unassigned images available</p>
                                            <p class="text-xs">Upload a new image above</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
}