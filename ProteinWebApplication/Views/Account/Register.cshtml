@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - ProteinPH</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body ng-app="ProteinWebApplication" ng-controller="ProteinWebApplicationController" class="bg-gray-50 min-h-screen flex items-center justify-center py-12 px-4">

    <div class="max-w-2xl w-full">
        <!-- Logo/Brand -->
        <div class="text-center mb-8">
            <a href="/Shop/Index" class="text-3xl font-bold text-gray-900">ProteinPH</a>
            <p class="text-gray-600 mt-2">Create your account to start shopping</p>
        </div>

        <!-- Register Card -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Create Account</h2>

            <form ng-submit="userRegister()" class="space-y-5">
                <!-- Full Name -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                    <input type="text"
                           ng-model="userRegisterData.fullName"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
                           placeholder="Juan Dela Cruz"
                           required>
                </div>

                <!-- Username and Email -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Username</label>
                        <input type="text"
                               ng-model="userRegisterData.username"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
                               placeholder="juandelacruz"
                               required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                        <input type="email"
                               ng-model="userRegisterData.email"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
                               placeholder="juan@example.com"
                               required>
                    </div>
                </div>

                <!-- Phone Number -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                    <input type="tel"
                           ng-model="userRegisterData.phoneNumber"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
                           placeholder="09XX-XXX-XXXX"
                           required>
                </div>

                <!-- Address -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Address</label>
                    <textarea ng-model="userRegisterData.address"
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
                              placeholder="Your complete address"
                              rows="2"
                              required></textarea>
                </div>

                <!-- Password -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                        <input type="password"
                               ng-model="userRegisterData.password"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
                               placeholder="••••••••"
                               required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Confirm Password</label>
                        <input type="password"
                               ng-model="userRegisterData.confirmPassword"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
                               placeholder="••••••••"
                               required>
                    </div>
                </div>

                <!-- Terms and Conditions -->
                <div class="flex items-start">
                    <input type="checkbox" ng-model="userRegisterData.acceptTerms" class="mt-1 rounded border-gray-300 text-black focus:ring-black" required>
                    <label class="ml-2 text-sm text-gray-600">
                        I agree to the <a href="#" class="text-black hover:underline">Terms and Conditions</a> and <a href="#" class="text-black hover:underline">Privacy Policy</a>
                    </label>
                </div>

                <button type="submit"
                        class="w-full bg-black text-white py-3 rounded-lg font-semibold hover:bg-gray-800 transition duration-300">
                    Create Account
                </button>
            </form>

            <!-- Login Link -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    Already have an account?
                    <a href="/Account/Login" class="text-black font-semibold hover:underline">Login</a>
                </p>
            </div>

            <!-- Back to Shop -->
            <div class="mt-4 text-center">
                <a href="/Shop/Index" class="text-sm text-gray-600 hover:text-black">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Shop
                </a>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/HolyScripts/Module.js"></script>
    <script src="~/Scripts/HolyScripts/Service.js"></script>
    <script src="~/Scripts/HolyScripts/Controller.js"></script>
</body>
</html>