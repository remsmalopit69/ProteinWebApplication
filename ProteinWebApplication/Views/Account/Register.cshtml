@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - ProteinPH</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body ng-app="ProteinWebApplication" ng-controller="ProteinWebApplicationController" class="bg-gray-50 min-h-screen flex items-center justify-center py-12 px-4">

    <div class="max-w-2xl w-full">
        <!-- Logo/Brand -->
        <div class="text-center mb-8">
            <a href="/Shop/Index" class="text-3xl font-bold text-gray-900">ProteinPH</a>
            <p class="text-gray-600 mt-2">Create your account to start shopping</p>
        </div>

        <!-- Register Card -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Create Account</h2>

            <form ng-submit="userRegister()" name="registerForm" novalidate class="space-y-5">
                <!-- Full Name -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Full Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text"
                           name="fullName"
                           ng-model="userRegisterData.fullName"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black"
                           ng-class="{'border-red-500': registerForm.fullName.$invalid && registerForm.fullName.$touched}"
                           placeholder="Juan Dela Cruz"
                           required
                           minlength="2"
                           maxlength="100"
                           ng-pattern="/^[a-zA-Z\s]+$/">
                    <div class="mt-1 text-xs text-red-600" ng-show="registerForm.fullName.$touched">
                        <p ng-show="registerForm.fullName.$error.required">Full name is required</p>
                        <p ng-show="registerForm.fullName.$error.minlength">Name must be at least 2 characters</p>
                        <p ng-show="registerForm.fullName.$error.pattern">Name can only contain letters and spaces</p>
                    </div>
                </div>

                <!-- Username and Email -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Username <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               name="username"
                               ng-model="userRegisterData.username"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black"
                               ng-class="{'border-red-500': registerForm.username.$invalid && registerForm.username.$touched}"
                               placeholder="juandelacruz"
                               required
                               minlength="3"
                               maxlength="50"
                               ng-pattern="/^[a-zA-Z0-9_]+$/">
                        <div class="mt-1 text-xs text-red-600" ng-show="registerForm.username.$touched">
                            <p ng-show="registerForm.username.$error.required">Username is required</p>
                            <p ng-show="registerForm.username.$error.minlength">Username must be at least 3 characters</p>
                            <p ng-show="registerForm.username.$error.pattern">Only letters, numbers, and underscores allowed</p>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Email <span class="text-red-500">*</span>
                        </label>
                        <input type="email"
                               name="email"
                               ng-model="userRegisterData.email"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black"
                               ng-class="{'border-red-500': registerForm.email.$invalid && registerForm.email.$touched}"
                               placeholder="juan@example.com"
                               required>
                        <div class="mt-1 text-xs text-red-600" ng-show="registerForm.email.$touched">
                            <p ng-show="registerForm.email.$error.required">Email is required</p>
                            <p ng-show="registerForm.email.$error.email">Please enter a valid email address</p>
                        </div>
                    </div>
                </div>

                <!-- Phone Number -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Phone Number <span class="text-red-500">*</span>
                    </label>
                    <input type="tel"
                           name="phoneNumber"
                           ng-model="userRegisterData.phoneNumber"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black"
                           ng-class="{'border-red-500': registerForm.phoneNumber.$invalid && registerForm.phoneNumber.$touched}"
                           placeholder="09XX-XXX-XXXX"
                           required
                           ng-pattern="/^(09|\+639)\d{9}$/">
                    <div class="mt-1 text-xs text-red-600" ng-show="registerForm.phoneNumber.$touched">
                        <p ng-show="registerForm.phoneNumber.$error.required">Phone number is required</p>
                        <p ng-show="registerForm.phoneNumber.$error.pattern">Enter valid PH mobile (09XXXXXXXXX)</p>
                    </div>
                </div>

                <!-- Address -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Address <span class="text-red-500">*</span>
                    </label>
                    <textarea name="address"
                              ng-model="userRegisterData.address"
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black"
                              ng-class="{'border-red-500': registerForm.address.$invalid && registerForm.address.$touched}"
                              placeholder="Your complete address"
                              rows="2"
                              required
                              minlength="10"
                              maxlength="255"></textarea>
                    <div class="mt-1 text-xs text-red-600" ng-show="registerForm.address.$touched">
                        <p ng-show="registerForm.address.$error.required">Address is required</p>
                        <p ng-show="registerForm.address.$error.minlength">Address must be at least 10 characters</p>
                    </div>
                </div>

                <!-- Password -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Password <span class="text-red-500">*</span>
                        </label>
                        <input type="password"
                               name="password"
                               ng-model="userRegisterData.password"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black"
                               ng-class="{'border-red-500': registerForm.password.$invalid && registerForm.password.$touched}"
                               placeholder="••••••••"
                               required
                               minlength="6"
                               maxlength="50">
                        <div class="mt-1 text-xs text-red-600" ng-show="registerForm.password.$touched">
                            <p ng-show="registerForm.password.$error.required">Password is required</p>
                            <p ng-show="registerForm.password.$error.minlength">Password must be at least 6 characters</p>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Confirm Password <span class="text-red-500">*</span>
                        </label>
                        <input type="password"
                               name="confirmPassword"
                               ng-model="userRegisterData.confirmPassword"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black"
                               ng-class="{'border-red-500': registerForm.confirmPassword.$invalid && registerForm.confirmPassword.$touched}"
                               placeholder="••••••••"
                               required
                               compare-to="userRegisterData.password">
                        <div class="mt-1 text-xs text-red-600" ng-show="registerForm.confirmPassword.$touched">
                            <p ng-show="registerForm.confirmPassword.$error.required">Please confirm your password</p>
                            <p ng-show="registerForm.confirmPassword.$error.compareTo">Passwords do not match</p>
                        </div>
                    </div>
                </div>

                <!-- Terms and Conditions -->
                <div>
                    <label class="flex items-start">
                        <input type="checkbox"
                               name="acceptTerms"
                               ng-model="userRegisterData.acceptTerms"
                               class="mt-1 rounded border-gray-300 text-black focus:ring-black"
                               required>
                        <span class="ml-2 text-sm text-gray-600">
                            I agree to the <a href="#" class="text-black hover:underline">Terms and Conditions</a>
                            and <a href="#" class="text-black hover:underline">Privacy Policy</a>
                            <span class="text-red-500">*</span>
                        </span>
                    </label>
                    <div class="mt-1 text-xs text-red-600" ng-show="registerForm.acceptTerms.$touched">
                        <p ng-show="registerForm.acceptTerms.$error.required">You must accept the terms and conditions</p>
                    </div>
                </div>

                <button type="submit"
                        ng-disabled="registerForm.$invalid"
                        class="w-full bg-black text-white py-3 rounded-lg font-semibold hover:bg-gray-800 transition duration-300 disabled:bg-gray-400 disabled:cursor-not-allowed">
                    Create Account
                </button>
            </form>

            <!-- Login Link -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    Already have an account?
                    <a href="/Account/Login" class="text-black font-semibold hover:underline">Login</a>
                </p>
            </div>

            <!-- Back to Shop -->
            <div class="mt-4 text-center">
                <a href="/Shop/Index" class="text-sm text-gray-600 hover:text-black">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Shop
                </a>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/HolyScripts/Module.js"></script>
    <script src="~/Scripts/HolyScripts/Service.js"></script>
    <script src="~/Scripts/HolyScripts/Controller.js"></script>
</body>
</html>