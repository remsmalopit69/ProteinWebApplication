@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - ProteinPH</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body ng-app="ProteinWebApplication" ng-controller="ProteinWebApplicationController" class="bg-gray-50 min-h-screen flex items-center justify-center py-12 px-4">

    <div class="max-w-md w-full">
        <!-- Logo/Brand -->
        <div class="text-center mb-8">
            <a href="/Shop/Index" class="text-3xl font-bold text-gray-900">ProteinPH</a>
            <p class="text-gray-600 mt-2">Welcome back! Please login to your account</p>
        </div>

        <!-- Login Card -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">User Login</h2>

            <form ng-submit="userLogin()" name="loginForm" novalidate class="space-y-5">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Username <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <input type="text"
                               name="username"
                               ng-model="userLoginData.username"
                               class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
                               ng-class="{'border-red-500': loginForm.username.$invalid && loginForm.username.$touched}"
                               placeholder="Enter your username"
                               required
                               minlength="3"
                               maxlength="50">
                        <i class="fas fa-user absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                    </div>
                    <!-- Error Messages -->
                    <div class="mt-1 text-xs text-red-600" ng-show="loginForm.username.$touched">
                        <p ng-show="loginForm.username.$error.required">Username is required</p>
                        <p ng-show="loginForm.username.$error.minlength">Username must be at least 3 characters</p>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Password <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <input type="password"
                               name="password"
                               ng-model="userLoginData.password"
                               class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
                               ng-class="{'border-red-500': loginForm.password.$invalid && loginForm.password.$touched}"
                               placeholder="Enter your password"
                               required
                               minlength="6">
                        <i class="fas fa-lock absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                    </div>
                    <div class="mt-1 text-xs text-red-600" ng-show="loginForm.password.$touched">
                        <p ng-show="loginForm.password.$error.required">Password is required</p>
                        <p ng-show="loginForm.password.$error.minlength">Password must be at least 6 characters</p>
                    </div>
                </div>

                <button type="submit"
                        ng-disabled="loginForm.$invalid"
                        class="w-full bg-black text-white py-3 rounded-lg font-semibold hover:bg-gray-800 transition duration-300 disabled:bg-gray-400 disabled:cursor-not-allowed">
                    Login
                </button>
            </form>

            <!-- Divider -->
            <div class="relative my-6">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-200"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-4 bg-white text-gray-500">Don't have an account?</span>
                </div>
            </div>

            <!-- Register Link -->
            <a href="/Account/Register"
               class="block w-full text-center py-3 border-2 border-black text-black font-semibold rounded-lg hover:bg-black hover:text-white transition duration-300">
                Create Account
            </a>


            <!-- Back to Shop -->
            <div class="mt-4 text-center">
                <a href="/Shop/Index" class="text-sm text-gray-600 hover:text-black">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Shop
                </a>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/HolyScripts/Module.js"></script>
    <script src="~/Scripts/HolyScripts/Service.js"></script>
    <script src="~/Scripts/HolyScripts/Controller.js"></script>
</body>
</html>