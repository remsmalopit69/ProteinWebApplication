<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Protein Admin</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <script src="https://cdn.tailwindcss.com"></script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        /* Minimalist Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #fff;
        }

        ::-webkit-scrollbar-thumb {
            background: #e5e7eb;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #9ca3af;
            }

        .nav-item.active {
            background-color: #f3f4f6;
            color: #000;
            font-weight: 600;
        }
    </style>
</head>
<body ng-app="ProteinWebApplication" ng-controller="ProteinWebApplicationController" class="bg-white text-gray-800">

    <div class="flex h-screen overflow-hidden">
        <aside class="w-64 bg-white border-r border-gray-200 flex-shrink-0 flex flex-col">
            <div class="p-6 border-b border-gray-100">
                <a href="/Admin/Dashboard" class="text-2xl font-bold tracking-tight text-black flex items-center gap-2">
                    <i class="fas fa-dumbbell text-black"></i> ProteinAdmin
                </a>
            </div>

            <nav class="flex-1 overflow-y-auto py-6 px-3">
                <ul class="space-y-1">
                    <li>
                        <a href="/Admin/Dashboard" class="flex items-center p-3 rounded-lg text-sm text-gray-600 hover:bg-gray-50 hover:text-black transition group">
                            <span class="w-8 flex justify-center"><i class="fas fa-chart-line group-hover:scale-110 transition"></i></span>
                            Dashboard
                        </a>
                    </li>
                    <li class="pt-4 pb-2 px-3 text-xs font-semibold text-gray-400 uppercase tracking-wider">Management</li>
                    <li>
                        <a href="/Admin/Categories" class="flex items-center p-3 rounded-lg text-sm text-gray-600 hover:bg-gray-50 hover:text-black transition group">
                            <span class="w-8 flex justify-center"><i class="fas fa-folder group-hover:scale-110 transition"></i></span>
                            Categories
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Products" class="flex items-center p-3 rounded-lg text-sm text-gray-600 hover:bg-gray-50 hover:text-black transition group">
                            <span class="w-8 flex justify-center"><i class="fas fa-box group-hover:scale-110 transition"></i></span>
                            Products
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Images" class="flex items-center p-3 rounded-lg text-sm text-gray-600 hover:bg-gray-50 hover:text-black transition group">
                            <span class="w-8 flex justify-center"><i class="fas fa-image group-hover:scale-110 transition"></i></span>
                            Images
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Orders" class="flex items-center p-3 rounded-lg text-sm text-gray-600 hover:bg-gray-50 hover:text-black transition group">
                            <span class="w-8 flex justify-center"><i class="fas fa-shopping-bag group-hover:scale-110 transition"></i></span>
                            Orders
                        </a>
                    </li>
                    <li class="pt-4 pb-2 px-3 text-xs font-semibold text-gray-400 uppercase tracking-wider">Analytics</li>
                    <li>
                        <a href="/Admin/Reports" class="flex items-center p-3 rounded-lg text-sm text-gray-600 hover:bg-gray-50 hover:text-black transition group">
                            <span class="w-8 flex justify-center"><i class="fas fa-file-alt group-hover:scale-110 transition"></i></span>
                            Reports
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="p-4 border-t border-gray-100">
                <button ng-click="logout()" class="flex w-full items-center justify-center space-x-2 p-3 rounded-lg text-sm font-medium text-red-600 bg-red-50 hover:bg-red-100 transition">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Sign Out</span>
                </button>
            </div>
        </aside>

        <div class="flex-1 flex flex-col overflow-hidden bg-gray-50">
            <header class="bg-white border-b border-gray-200 py-4 px-8 flex justify-between items-center sticky top-0 z-30">
                <h2 class="text-xl font-bold text-gray-900">@ViewBag.Title</h2>
                <div class="flex items-center gap-4">
                    <div class="text-right hidden sm:block">
                        <p class="text-sm font-medium text-gray-900">Admin User</p>
                        <p class="text-xs text-gray-500">Administrator</p>
                    </div>
                    <div class="h-10 w-10 rounded-full bg-black text-white flex items-center justify-center font-bold text-sm">
                        A
                    </div>
                </div>
            </header>

            <main class="flex-1 overflow-y-auto p-8">
                <div class="max-w-7xl mx-auto">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/HolyScripts/Module.js"></script>
    <script src="~/Scripts/HolyScripts/Service.js"></script>
    <script src="~/Scripts/HolyScripts/Controller.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>