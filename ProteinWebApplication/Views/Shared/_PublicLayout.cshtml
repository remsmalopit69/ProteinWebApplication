<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Protein Shop</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body ng-app="ProteinWebApplication" ng-controller="ProteinWebApplicationController" class="bg-gray-50">

    <!-- Navigation Bar -->
    <nav class="bg-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <!-- Logo -->
                <a href="/Shop/Index" class="text-2xl font-bold text-blue-600">
                    <i class="fas fa-dumbbell mr-2"></i>PROTEIN SHOP
                </a>

                <!-- Desktop Navigation -->
                <div class="hidden md:flex space-x-8">
                    <a href="/Shop/Index" class="text-gray-700 hover:text-blue-600 font-medium transition">
                        Home
                    </a>
                    <a href="/Shop/Products" class="text-gray-700 hover:text-blue-600 font-medium transition">
                        Products
                    </a>
                    <a href="/Shop/Categories" class="text-gray-700 hover:text-blue-600 font-medium transition">
                        Categories
                    </a>
                    <a href="/Shop/About" class="text-gray-700 hover:text-blue-600 font-medium transition">
                        About
                    </a>
                </div>

                <!-- Cart & Admin -->
                <div class="flex items-center space-x-4">
                    <button class="relative text-gray-700 hover:text-blue-600 transition">
                        <i class="fas fa-shopping-cart text-2xl"></i>
                        <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">0</span>
                    </button>
                    <a href="/Admin/Login" class="hidden md:block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                        <i class="fas fa-user-shield mr-2"></i>Admin
                    </a>

                    <!-- Mobile Menu Button -->
                    <button ng-click="toggleMobileMenu()" class="md:hidden text-gray-700">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div>
            </div>

            <!-- Mobile Navigation -->
            <div ng-show="mobileMenuOpen" class="md:hidden pb-4 border-t">
                <div class="flex flex-col space-y-3 mt-3">
                    <a href="/Shop/Index" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
                    <a href="/Shop/Products" class="text-gray-700 hover:text-blue-600 font-medium">Products</a>
                    <a href="/Shop/Categories" class="text-gray-700 hover:text-blue-600 font-medium">Categories</a>
                    <a href="/Shop/About" class="text-gray-700 hover:text-blue-600 font-medium">About</a>
                    <a href="/Admin/Login" class="text-blue-600 font-medium">
                        <i class="fas fa-user-shield mr-2"></i>Admin
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white mt-16">
        <div class="container mx-auto px-4 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- About -->
                <div>
                    <h3 class="text-xl font-bold mb-4">
                        <i class="fas fa-dumbbell mr-2"></i>PROTEIN SHOP
                    </h3>
                    <p class="text-gray-400">Your trusted source for premium protein supplements and fitness nutrition.</p>
                </div>

                <!-- Quick Links -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="/Shop/Products" class="text-gray-400 hover:text-white transition">Products</a></li>
                        <li><a href="/Shop/Categories" class="text-gray-400 hover:text-white transition">Categories</a></li>
                        <li><a href="/Shop/About" class="text-gray-400 hover:text-white transition">About Us</a></li>
                    </ul>
                </div>

                <!-- Categories -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Categories</h4>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Whey Protein</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Plant-Based</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Mass Gainers</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Pre-Workout</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Contact Us</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><i class="fas fa-envelope mr-2"></i>info@proteinshop.com</li>
                        <li><i class="fas fa-phone mr-2"></i>+63 123 456 7890</li>
                        <li><i class="fas fa-map-marker-alt mr-2"></i>Quezon City, Philippines</li>
                    </ul>
                    <div class="flex space-x-4 mt-4">
                        <a href="#" class="text-gray-400 hover:text-white transition"><i class="fab fa-facebook text-2xl"></i></a>
                        <a href="#" class="text-gray-400 hover:text-white transition"><i class="fab fa-instagram text-2xl"></i></a>
                        <a href="#" class="text-gray-400 hover:text-white transition"><i class="fab fa-twitter text-2xl"></i></a>
                    </div>
                </div>
            </div>

            <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; @DateTime.Now.Year Protein Shop. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts - USE EXISTING FILES -->
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/HolyScripts/Module.js"></script>
    <script src="~/Scripts/HolyScripts/Service.js"></script>
    <script src="~/Scripts/HolyScripts/Controller.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>