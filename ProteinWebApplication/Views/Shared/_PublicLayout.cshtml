<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ProteinPH</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
    </style>
</head>
<body ng-app="ProteinWebApplication" ng-controller="ProteinWebApplicationController" ng-init="checkUserLogin()" class="flex flex-col min-h-screen bg-white text-gray-900">

    <div class="bg-gray-100 text-xs text-gray-600 py-2 border-b">
        <div class="container mx-auto px-4 flex flex-col md:flex-row justify-between items-center text-center md:text-left space-y-1 md:space-y-0">
            <p>Free shipping on orders over &#8369;2,000 nationwide</p>
            <p>Based in Philippines | Contact: 0917-XXX-XXXX</p>
        </div>
    </div>

    <nav class="bg-white sticky top-0 z-50 border-b border-gray-100">
        <div class="container mx-auto px-4">
            <div class="flex flex-wrap justify-between items-center py-4">

                <a href="/Shop/Index" class="text-2xl font-bold tracking-tight text-black flex-shrink-0 mr-8">
                    ProteinPH
                </a>

                <div class="hidden lg:flex space-x-8 font-medium text-sm text-gray-600">
                    <a href="/Shop/Index" class="hover:text-black transition">Home</a>
                    <a href="/Shop/Products" class="hover:text-black transition">Products</a>
                    <a href="/Shop/Categories" class="hover:text-black transition">Categories</a>
                    <a href="/Shop/About" class="hover:text-black transition">About</a>
                    <a href="/Home/Contact" class="hover:text-black transition">Contact</a>
                </div>

                <div class="hidden md:flex flex-grow max-w-md mx-8 relative">
                    <input type="text" placeholder="Search products..." class="w-full bg-gray-100 border-none rounded-full py-2 px-4 pl-10 text-sm focus:ring-2 focus:ring-black focus:bg-white transition" />
                    <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                </div>

                <div class="flex items-center space-x-6 text-gray-700">
                    <!-- User Account Dropdown -->
                    <div class="relative" ng-if="isUserLoggedIn">
                        <button class="hover:text-black transition flex items-center space-x-2"
                                ng-click="toggleUserDropdown()"
                                id="userMenuButton">
                            <i class="fas fa-user-circle text-2xl"></i>
                            <span class="hidden lg:inline text-sm">{{currentUser.userName}}</span>
                        </button>

                        <!-- Dropdown Menu -->
                        <div ng-show="showUserDropdown"
                             class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-100 py-2 z-50">
                            <div class="px-4 py-2 border-b border-gray-100">
                                <p class="text-sm font-semibold text-gray-900">{{currentUser.userName}}</p>
                                <p class="text-xs text-gray-500">{{currentUser.userEmail}}</p>
                            </div>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                <i class="fas fa-user mr-2"></i>My Profile
                            </a>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                <i class="fas fa-box mr-2"></i>My Orders
                            </a>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                <i class="fas fa-heart mr-2"></i>Wishlist
                            </a>
                            <div class="border-t border-gray-100 my-1"></div>
                            <button ng-click="userLogout()" class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-50">
                                <i class="fas fa-sign-out-alt mr-2"></i>Logout
                            </button>
                        </div>
                    </div>

                    <!-- Login/Register Links (when not logged in) -->
                    <div class="flex items-center space-x-4" ng-if="!isUserLoggedIn">
                        <a href="/Account/Login" class="hover:text-black transition text-sm font-medium">
                            Login
                        </a>
                        <a href="/Account/Register" class="bg-black text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-800 transition">
                            Sign Up
                        </a>
                    </div>

                    <button class="relative hover:text-black transition">
                        <i class="fas fa-shopping-cart text-xl"></i>
                        <span class="absolute -top-2 -right-2 bg-black text-white text-[10px] font-bold rounded-full w-4 h-4 flex items-center justify-center">0</span>
                    </button>

                    <button ng-click="toggleMobileMenu()" class="lg:hidden text-gray-700 hover:text-black">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>

            <div ng-show="mobileMenuOpen" class="lg:hidden pb-4 border-t border-gray-100 animate-fade-in-down" style="display: none;">
                <div class="mt-4 mb-4 relative">
                    <input type="text" placeholder="Search products..." class="w-full bg-gray-50 border border-gray-200 rounded-lg py-2 px-4 pl-10 text-sm" />
                    <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                </div>

                <div class="flex flex-col space-y-3">
                    <a href="/Shop/Index" class="text-gray-600 hover:text-black font-medium">Home</a>
                    <a href="/Shop/Products" class="text-gray-600 hover:text-black font-medium">Products</a>
                    <a href="/Shop/Categories" class="text-gray-600 hover:text-black font-medium">Categories</a>
                    <a href="/Shop/About" class="text-gray-600 hover:text-black font-medium">About</a>
                    <a href="/Home/Contact" class="text-gray-600 hover:text-black font-medium">Contact</a>

                    <!-- Mobile User Menu -->
                    <div class="border-t border-gray-200 pt-3 mt-3" ng-if="isUserLoggedIn">
                        <p class="text-sm font-semibold text-gray-900 mb-2">{{currentUser.userName}}</p>
                        <a href="#" class="block py-2 text-gray-600 hover:text-black">My Profile</a>
                        <a href="#" class="block py-2 text-gray-600 hover:text-black">My Orders</a>
                        <button ng-click="userLogout()" class="block py-2 text-red-600 hover:text-red-800 text-left w-full">Logout</button>
                    </div>

                    <div class="border-t border-gray-200 pt-3 mt-3 space-y-2" ng-if="!isUserLoggedIn">
                        <a href="/Account/Login" class="block bg-gray-100 text-gray-900 px-4 py-3 rounded-lg text-center font-medium hover:bg-gray-200">
                            Login
                        </a>
                        <a href="/Account/Register" class="block bg-black text-white px-4 py-3 rounded-lg text-center font-medium hover:bg-gray-800">
                            Sign Up
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-black text-white pt-16 pb-8">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
                <div>
                    <h3 class="text-xl font-bold mb-6">ProteinPH</h3>
                    <p class="text-gray-400 text-sm leading-relaxed mb-6">
                        Your trusted Philippines-based reseller of premium protein supplements. Quality products, competitive prices, fast delivery.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="w-8 h-8 rounded-full bg-gray-800 flex items-center justify-center hover:bg-white hover:text-black transition duration-300"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="w-8 h-8 rounded-full bg-gray-800 flex items-center justify-center hover:bg-white hover:text-black transition duration-300"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="w-8 h-8 rounded-full bg-gray-800 flex items-center justify-center hover:bg-white hover:text-black transition duration-300"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>

                <div>
                    <h4 class="text-lg font-semibold mb-6">Quick Links</h4>
                    <ul class="space-y-3 text-sm text-gray-400">
                        <li><a href="/Shop/Index" class="hover:text-white transition">Home</a></li>
                        <li><a href="/Shop/Products" class="hover:text-white transition">All Products</a></li>
                        <li><a href="/Shop/Categories" class="hover:text-white transition">Categories</a></li>
                        <li><a href="/Shop/About" class="hover:text-white transition">About Us</a></li>
                        <li><a href="/Home/Contact" class="hover:text-white transition">Contact</a></li>
                    </ul>
                </div>

                <div>
                    <h4 class="text-lg font-semibold mb-6">Customer Service</h4>
                    <ul class="space-y-3 text-sm text-gray-400">
                        <li><a href="/Home/Contact" class="hover:text-white transition">Contact Us</a></li>
                        <li><a href="#" class="hover:text-white transition">Shipping Info</a></li>
                        <li><a href="#" class="hover:text-white transition">Returns & Exchanges</a></li>
                        <li><a href="#" class="hover:text-white transition">FAQ</a></li>
                        <li><a href="#" class="hover:text-white transition">Track Your Order</a></li>
                    </ul>
                </div>

                <div>
                    <h4 class="text-lg font-semibold mb-6">Contact Information</h4>
                    <ul class="space-y-4 text-sm text-gray-400">
                        <li class="flex items-start">
                            <i class="fas fa-phone mt-1 mr-3 text-gray-500"></i>
                            <span>0917-XXX-XXXX</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-envelope mt-1 mr-3 text-gray-500"></i>
                            <span>hello@proteinph.com</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-map-marker-alt mt-1 mr-3 text-gray-500"></i>
                            <span>Metro Manila, Philippines</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="border-t border-gray-800 pt-8 text-center text-xs text-gray-500">
                <p>&copy; @DateTime.Now.Year ProteinPH. All rights reserved. | Trusted Philippines Protein Supplement Reseller</p>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/HolyScripts/Module.js"></script>
    <script src="~/Scripts/HolyScripts/Service.js"></script>
    <script src="~/Scripts/HolyScripts/Controller.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>